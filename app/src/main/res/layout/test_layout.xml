<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reminder1"
        android:id="@+id/reminder1"
        app:layout_constraintRight_toLeftOf="@+id/reminder_icon"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reminder_icon"
        app:srcCompat="@drawable/ic_notifications_black_24dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Old Street Circle,New Delhi"
        android:layout_toRightOf="@+id/reminder_icon"
        android:textStyle="bold"
        android:id="@+id/address"
        app:layout_constraintLeft_toRightOf="@+id/reminder_icon"

        />

</android.support.constraint.ConstraintLayout>