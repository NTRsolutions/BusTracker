<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/home_card"
    style="@style/CardViewStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="120"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/student"
            android:id="@+id/student_image"
            android:adjustViewBounds="true"
            android:elevation="10dp"
            android:layout_weight="100"
            android:scaleType="fitXY"
            android:background="@drawable/shadow_rect"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:id="@+id/student_name_layout"
            android:layout_below="@+id/student_image"
            android:weightSum="100"
            android:layout_marginTop="10dp"
            android:layout_weight="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sachin Parekh"
            android:layout_below="@+id/student_image"
            android:id="@+id/student_name"
            android:layout_marginLeft="20dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_weight="70" />


            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/status"
                android:layout_below="@+id/student_image"
                android:src="@drawable/circle"
                android:layout_marginRight="5dp"
                android:layout_weight="2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="55dp"
                />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="At School"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/student_image"
            android:layout_marginRight="15dp"
            android:id="@+id/status"
            android:layout_weight="28"
            android:layout_gravity="center_vertical"
            />



        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Class 10th B Division"
            android:layout_below="@+id/student_name_layout"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/class_section"
            android:layout_weight="10"/>




    </LinearLayout>
    </android.support.v7.widget.CardView>