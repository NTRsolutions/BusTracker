<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/home_card"
    style="@style/CardViewStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="120">

        <ImageView
            android:id="@+id/student_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100"
            android:adjustViewBounds="true"
            android:elevation="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/student"
            android:background="@drawable/shadow_rect"/>

        <LinearLayout
            android:id="@+id/student_name_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/student_image"
            android:layout_marginTop="10dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/student_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:layout_weight="70"
                android:text="Sachin Parekh"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold" />


            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/student_image"
                android:layout_gravity="bottom"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/status"
                android:layout_weight="3"
                android:src="@drawable/circle" />

            <TextView
                android:id="@+id/status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/student_image"
                android:layout_gravity="bottom"
                android:layout_marginRight="10dp"
                android:layout_weight="27"
                android:text="At School" />


        </LinearLayout>

        <TextView
            android:id="@+id/class_section"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="10"
            android:text="Class 10th B Division" />


    </LinearLayout>
</android.support.v7.widget.CardView>