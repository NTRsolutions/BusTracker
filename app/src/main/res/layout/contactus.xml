<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <include layout="@layout/toolbar"
        android:id="@+id/toolbar1">
    </include>

<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="30dp"
    android:layout_marginRight="30dp"
    android:layout_below="@+id/toolbar1"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_local_phone_orange_24dp"
        android:id="@+id/image_phone"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:layout_toRightOf="@+id/image_phone"
        android:id="@+id/contact"
        android:layout_marginLeft="25dp"
        android:textColor="#999999"
        android:textSize="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="02632 233 522"
        android:layout_toRightOf="@+id/image_phone"
        android:layout_below="@+id/contact"
        android:layout_marginLeft="25dp"
        android:id="@+id/contact2"
        android:layout_marginTop="2dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact2"
        android:id="@+id/image_mail"
        app:srcCompat="@drawable/ic_mail_orange_24dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mail"
        android:layout_toRightOf="@+id/image_mail"
        android:layout_below="@+id/contact2"
        android:id="@+id/mail"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:textColor="#999999"
        android:textSize="12dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stxaviers@gmail.com"
        android:layout_toRightOf="@+id/image_mail"
        android:layout_below="@+id/mail"
        android:id="@+id/mail2"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="2dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_location_on_orange_24dp"
        android:layout_below="@+id/mail2"
        android:id="@+id/image_location"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:layout_toRightOf="@+id/image_location"
        android:id="@+id/address"
        android:layout_below="@+id/mail2"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:textColor="#999999"
        android:textSize="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="St. Xavier's High School,\nNear City Library,\nNew Delhi."
        android:layout_toRightOf="@+id/image_location"
        android:layout_below="@+id/address"
        android:id="@+id/address2"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/address2"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:id="@+id/or"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/or"
        android:background="@color/textBox"
        android:layout_toRightOf="@+id/write"
        android:id="@+id/line1"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp">
    </View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write us Directly"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/or"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:id="@+id/write"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/or"
        android:background="@color/textBox"
        android:layout_toLeftOf="@+id/write"
        android:id="@+id/line2"
        android:layout_marginTop="8dp"
        android:layout_marginRight="5dp">
    </View>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Subject"
        android:id="@+id/subject"
        android:layout_below="@+id/write"
        android:background="@drawable/round_corner"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textSize="12dp"
        android:textColor="#999999"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type your message here"
        android:layout_below="@+id/subject"
        android:id="@+id/message"
        android:background="@drawable/round_corner"
        android:layout_marginTop="5dp"
        android:inputType="textMultiLine"
        android:lines="6"
        android:paddingLeft="15dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textSize="12dp"
        android:textColor="#999999"
        android:gravity="top|left"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@id/message"
        android:layout_alignParentRight="true"
        android:background="@drawable/customized_button"
        android:layout_marginTop="5dp"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:minHeight="30dp"
        android:textSize="13sp"
        android:minWidth="80dp"
        />



</RelativeLayout>

    </RelativeLayout>